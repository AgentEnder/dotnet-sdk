<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <OutDirName>Tests\$(MSBuildProjectName)</OutDirName>
    <TestTemplateTestsDirectory>$(ArtifactsBinDir)\$(OutDirName)</TestTemplateTestsDirectory>
  </PropertyGroup>

  <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" />

  <PropertyGroup>
    <OutputType>Exe</OutputType>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Microsoft.NET.TestFramework\Microsoft.NET.TestFramework.csproj" />
  </ItemGroup>

  <Import Project="Sdk.targets" Sdk="Microsoft.NET.Sdk" />

  <ItemGroup>
    <TemplateFeedFolder Include="..\..\template_feed\**\*.*" />
  </ItemGroup>

  <Target Name="CopyTarget">
    <Copy SourceFiles="@(TemplateFeedFolder)" DestinationFiles="@(TemplateFeedFolder->'$(TestTemplateTestsDirectory)/%(RecursiveDir)%(Filename)%(Extension)')" />
  </Target>
</Project>
